server {
    listen ${NGINX_PORT};
    listen [::]:${NGINX_PORT};

    server_name ${NGINX_HOST} www.${NGINX_HOST};
    server_tokens off;

    location / {
        root   /usr/share/nginx/html;
        index  index.html index.htm;
    }

    location /.well-known/acme-challenge/ {
        root /var/www/certbot;
    }

    location /map/ {
        proxy_pass http://bluemap:8100/;
    }
}

